{
   "extends": [
      "../.eslintrc.json",
      "plugin:mocha/recommended"
   ],
   "env": {
      "mocha": true
   },
   "rules": {
      "node/global-require": "off",
      "no-loop-func": "off",
      "mocha/no-setup-in-describe": "off",
      "no-unused-vars": [
         "warn",
         {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
         }
      ]
   }
}